<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>PickUp-Dispatch</display-name>

    <filter>
        <filter-name>SSOAgentFilter</filter-name>
        <filter-class>org.wso2.carbon.identity.sso.agent.SAML2SSOAgentFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SSOAgentFilter</filter-name>
        <url-pattern>/consumer</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SSOAgentFilter</filter-name>
        <url-pattern>/logout</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SSOAgentFilter</filter-name>
        <url-pattern>/samlsso</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SSOAgentFilter</filter-name>
        <url-pattern>/openid</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SSOAgentFilter</filter-name>
        <url-pattern>/token</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SSOAgentFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

    <context-param>
        <param-name>property-file</param-name>
        <param-value>sso.properties</param-value>
    </context-param>
    <context-param>
        <param-name>certificate-file</param-name>
        <param-value>wso2carbon.jks</param-value>
    </context-param>

    <listener>
        <listener-class>org.wso2.carbon.identity.sso.agent.SSOAgentContextEventListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.wso2.carbon.identity.sso.agent.session.management.SSOAgentHttpSessionListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.wso2.qsg.webapp.pickup.dispatch.ServletContextListener</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
